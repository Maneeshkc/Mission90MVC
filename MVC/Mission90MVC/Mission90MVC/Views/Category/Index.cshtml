@model IEnumerable<Mission90.Dal.Models.Category>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayOrder)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OrderBy(x=>x.DisplayOrder)) {
        <tr>
            <td>
                @item.Category_Id
            </td>
            <td>
                @item.CategoryName
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayOrder)
            </td>           
        </tr>
}
    </tbody>
</table>
